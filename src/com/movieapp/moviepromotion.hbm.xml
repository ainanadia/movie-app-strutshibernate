<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.movieapp">
    <class name="PromoInfo" table="moviepromotion">
        <id name="promoid" type="int" column="promoid">
            <generator class="native"/>
        </id>
        <property name="promoimage" type="string" column="promoimage"/>
        <property name="promotitle" type="string" column="promotitle"/>
        <property name="promodescription" type="string" column="promodescription"/>
    </class>
</hibernate-mapping>